<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
    <style name="DialogProgress" parent="@style/Theme.AppCompat">
        <item name="colorAccent">@color/white</item>
    </style>

    <style name="style_text_btn">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:paddingLeft">30dp</item>
        <item name="android:paddingRight">30dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">  sans-serif-light
        </item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
    </style>

    <style name="frame_btn">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/selector_btn</item>
        <item name="android:foreground">?selectableItemBackgroundBorderless</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:padding">2dp</item>
        <item name="android:layout_gravity">left</item>
    </style>

    <style name="text_infor_title">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">left|center_vertical</item>
        <item name="android:textSize">20sp</item>
        <item name="android:layout_marginBottom">24dp</item>
        <item name="android:fontFamily">sans-serif-light</item>
    </style>
    <style name="text_info_content" parent="text_infor_title">
        <item name="android:layout_marginBottom">8dp</item>

        <item name="android:textSize">12sp</item>

    </style>
</resources>
